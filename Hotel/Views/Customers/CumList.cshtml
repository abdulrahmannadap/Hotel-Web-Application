@{
}
@model IEnumerable<Customer>

    <table class="table table-hover table-bordered">
        <thead class="bg-info ">
            <tr>
                <th> Id </th>
                <th> Customer Name </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cuslist in Model)
            {
                <tr>
                    <td>

                        @cuslist.Id
                    </td>
                <td>
                    @cuslist.CustomerName
                </td>
                <td>
                    @Html.ActionLink("Edit Order" ,"Edit","Customers",new {id = cuslist.Id } ,new {@class="btn btn-primary"})
                    @Html.ActionLink("Delete Order" ,"Delete","Customers",new {id = cuslist.Id } ,new {@class="btn btn-danger"})
                </td>

                </tr>
            }
        </tbody>
    </table>